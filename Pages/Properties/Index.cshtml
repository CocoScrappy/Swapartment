@model Swapartment.Pages_Properties.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].DailyRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].NumberOfBedrooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].NumberOfBathrooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].UnitNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Property)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DailyRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfBedrooms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfBathrooms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
