@page
@model Swapartment.Pages_Properties.EditModel

@{
  ViewData["Title"] = "Edit";
}

<div class="border-top pb-5">
  <div class="container pt-5">
    <h1>@Html.DisplayFor(model => model.Property.Title)</h1>

    <form method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="Property.Id" />
      <div class="form-floating mb-3">
        <input asp-for="Property.Title" class="form-control" />
        <label asp-for="Property.Title" class="control-label"></label>
        <span asp-validation-for="Property.Title" class="text-danger"></span>
      </div>
      <div class="form-floating mb-3">
        <textarea asp-for="Property.Description" class="form-control"></textarea>
        <label asp-for="Property.Description" class="control-label"></label>
        <span asp-validation-for="Property.Description" class="text-danger"></span>
      </div>
      <div class="form-floating mb-3">
        <input asp-for="Property.DailyRate" class="form-control" />
        <label asp-for="Property.DailyRate" class="control-label"></label>
        <span asp-validation-for="Property.DailyRate" class="text-danger"></span>
      </div>
      <div class="form-floating mb-3">
        <input asp-for="Property.NumberOfBedrooms" class="form-control" />
        <label asp-for="Property.NumberOfBedrooms" class="control-label"></label>
        <span asp-validation-for="Property.NumberOfBedrooms" class="text-danger"></span>
      </div>
      <div class="form-floating mb-3">
        <input asp-for="Property.NumberOfBathrooms" class="form-control" />
        <label asp-for="Property.NumberOfBathrooms" class="control-label"></label>
        <span asp-validation-for="Property.NumberOfBathrooms" class="text-danger"></span>
      </div>
      <div class="form-floating mb-3">
        <input asp-for="Property.UnitNumber" class="form-control" />
        <label asp-for="Property.UnitNumber" class="control-label"></label>
        <span asp-validation-for="Property.UnitNumber" class="text-danger"></span>
      </div>
      <div class="form-floating mb-3">
        <input asp-for="Property.StreetAddress" class="form-control" />
        <label asp-for="Property.StreetAddress" class="control-label"></label>
        <span asp-validation-for="Property.StreetAddress" class="text-danger"></span>
      </div>
      <div class="form-floating mb-3">
        <input asp-for="Property.State" class="form-control" />
        <label asp-for="Property.State" class="control-label"></label>
        <span asp-validation-for="Property.State" class="text-danger"></span>
      </div>
      <div class="form-floating mb-3">
        <input asp-for="Property.City" class="form-control" />
        <label asp-for="Property.City" class="control-label"></label>
        <span asp-validation-for="Property.City" class="text-danger"></span>
      </div>
      <div class="form-floating mb-3">
        <input asp-for="Property.PostalCode" class="form-control" />
        <label asp-for="Property.PostalCode" class="control-label"></label>
        <span asp-validation-for="Property.PostalCode" class="text-danger"></span>
      </div>
      <div class="form-floating mb-3">
        <input asp-for="Property.Country" class="form-control" />
        <label asp-for="Property.Country" class="control-label"></label>
        <span asp-validation-for="Property.Country" class="text-danger"></span>
      </div>

      @* Tags *@

      @foreach (var item in Model.Tags)

      {
        <div class="form-check mb-3">
          @* <input name="Model.Extras" type="checkbox" value="@cb.Id" /> @cb.Name<br /> *@
          <input name="Model.Tags" class="form-check-input" type="checkbox" value="@item.Id" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault">
            @item.Name
          </label>
        </div>
      }

      <div class="form-group mb-3">
        <input type="submit" value="Save" class="btn btn-primary" />
      </div>
    </form>
    <div>
      <a asp-page="./Index">Back to List</a>
    </div>
  </div>
</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
