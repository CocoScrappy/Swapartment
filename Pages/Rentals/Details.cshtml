@page "{id:int}"
@model Swapartment.Pages_Rentals.DetailsModel

@{
  ViewData["Title"] = "Details";
}

<div class="border-top pb-5">
  <div class="container pt-5">
    <h1 class="mb-5">Booked!</h1>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Rental.StartDate)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Rental.StartDate)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Rental.EndDate)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Rental.EndDate)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Rental.PriceTotal)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Rental.PriceTotal)
    </dd>
    <form method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group mb-3">
        <label asp-for="Rental.Feedback" class="control-label"></label>
        <textarea asp-for="Rental.Feedback" rows="3" class="form-control"></textarea>
        <span asp-validation-for="Rental.Feedback" class="text-danger"></span>
      </div>
      <div class="form-group mb-3">
        <input type="submit" value="Save" class="btn btn-primary" />
      </div>
    </form>
    <div>
      <a asp-page="./Edit" asp-route-id="@Model.Rental?.Id">Edit</a> |
      <a asp-page="../Index">Back</a>
    </div>
  </div>
</div>
