}

<h1>Details</h1>

<div>
    <h4>Rental</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rental.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rental.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rental.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rental.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rental.PriceTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rental.PriceTotal)
